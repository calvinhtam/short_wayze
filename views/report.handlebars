<html>

<head>
	<title>Add Shortcut</title>
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" href="/css/hamburger.css">
	<link rel="stylesheet" href="/css/layout.css">
	<link rel="stylesheet" href="/css/report.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	<!-- Load an icon library to show a hamburger menu (bars) on small screens -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
	<script type="text/javascript" src="js/script.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/hamburger.js"></script>
	<script src="/js/report.js"></script>

	<!-- Top Navigation Menu -->
	<header class="title">
		<a href="/nav" style="text-decoration: none;">
            <h1>SHORT WAYZE</h1>
        </a>
		<div class="top">
			<a class="menu_icon"><i class="fa fa-bars"></i></a>
		</div>
	</header>
    <nav class="menu" id="nav_menu">
        {{#each routes}}
            <a href="{{route}}" class="item-menu" id="nav_item_{{route}}">{{label}}</a>
        {{/each}}
    </nav>
    <div class="container">

    </div>

	<!--Trigger-->
	<a class="login-trigger" href="#" data-target="#login" data-toggle="modal">Report</a>

	<label id="login" class="modal fade" role="dialog">
		<label class="modal-dialog">

			<label class="modal-content">
				<label class="modal-body">
					<button data-dismiss="modal" class="close">&times;</button>

					<h2>Report the Cop/Construction</h2>
                    <br>
					<form id="addCop">
                        <div class="form-group">
                            <label for="cop_button">Cop</label>
                            <input type="radio" value="cop" id="cop_button" name="type" checked>
                            <label for="construction_button">Construction</label>
                            <input type="radio" value="construction" id="construction_button" name="type">
                        </div>
						<div class="form-group">
							<label for="location">Location:</label>
							<input type="text" class="form-control" id="location" placeholder="Location" name="location">
						</div>
						<div class="form-group">
							<label for="time">Time:</label>
							<input type="text" class="form-control" id="time" placeholder="Time" name="time">
						</div>
						<input type="submit" id="submit-Btn" class="btn btn-default" value="Report">
					</form>
					</input>
				</label>
			</label>
		</label>
	</label>

    <br>
	<h1>Recent Reports</h1>
    <div class="little-border"></div>
    <h2>Cops</h2>
	{{#each police}}
	<div class="report">
        <p id="location" style="font-weight: bold;">Location: {{location}} </p>
        <p id="time">Time: {{time}}</p>
        <div class="little-border"></div>
    </div>
	{{/each}}

    <h2>Construction</h2>
    {{#each construction}}
        <div class="report">
            <p id="location" style="font-weight: bold;">Location: {{location}} </p>
            <p id="time">Time: {{time}}</p>
            <div class="little-border"></div>
        </div>
    {{/each}}

    <script src="/js/navigation.js"></script>
</body>

</html>